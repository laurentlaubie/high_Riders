{% extends 'base.html.twig' %}

{% block title %}Back-Office | Spots{% endblock %}

{% block body %}

<main class"container m-4">
    <div class="m-4 align-item-center"> 
        <div class="container ">
            <table class="table table-striped table-hover table-bordered align-middle m-4">
                <thead>
                    <tr class="table-success text-center">
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Image</th>
                        <th>Type de Spot</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
            {% for listspot in spots %}
                <tr class="text-center">
                    <td>{{ listspot.id }}</td>
                    <td>{{ listspot.title }}</td>
                    <th> 
                        {% if "http" in listspot.image %}
                            <image src="{{ listspot.image }}" width="75" >
                        {% else %}
                            <image src="{{ asset('uploads/' ~ listspot.image) }}" width="75">
                        {% endif %}
                    </th>
                
                    <td>{{ listspot.typeSpot	 }}</td>
                
                    <td> 
                    <div class="d-grid gap-2 col-6 mx-auto">
                    <a href="{{ path('backoffice_spots_show', {id:listspot.id}) }}"class="btn btn-outline-secondary btn-sm">Voir</a> 
                    <a href="{{ path('backoffice_spot_delete', {id:listspot.id}) }}" class="btn btn-outline-secondary btn-sm" onclick="return confirm('Êtes-vous sur de vouloir effectuer cette action ?')" >Supprimer</a>
                    </div>
                    </td>
                </tr>
            {% endfor %}
                <div class="d-grid gap-2 d-md-block mx-4">
                    <a href="{{ path('backoffice_spot_add')  }}" class="btn btn-outline-success btn-sm mb-2">Ajouter un nouveau spot </a> 
                    <a href="{{ path('backoffice_home')  }}" class="btn btn-outline-secondary btn-sm mb-2 mx-2">Retour à l'accueil</a> 
                </div>
            </table>
        </div>
    </div>   
    <br class="m-4">         
</main>

{% endblock %}
